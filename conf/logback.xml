<configuration>

  <property resource="logback.properties" />

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>${CONSOLE_LEVEL:-WARN}</level>
    </filter>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.SSSZ,UTC} %-5level [%logger{15}]: %message%n</pattern>
    </encoder>
  </appender>

  <logger name="org.neo4j.kernel.InternalAbstractGraphDatabase" level="WARN">
  </logger>

  <logger name="org.neo4j" level="INFO" additivity="false">
    <appender-ref ref="CONSOLE"/>
  </logger>
  <logger name="com.maxdemarzi.processing" level="INFO" additivity="false">
    <appender-ref ref="CONSOLE"/>
  </logger>

</configuration>

